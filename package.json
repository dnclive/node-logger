  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dnclive/node-logger/issues"
  },
  "homepage": "https://github.com/dnclive/node-logger#readme",
  "engines": {
    "node": ">=16.0.0 <22.0.0",
    "npm": ">=9.0.0 <12.0.0"
  },
  "devDependencies": {
    "@dnclive/node-js-tools": "^0.0.24",
    "esbuild": "^0.19.9",
    "jest": "^29.7.0"
  }
